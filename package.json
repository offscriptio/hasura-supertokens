{
  "name": "@offscriptio/hasura-supertokens",
  "version": "0.1.1",
  "main": ".build/index.js",
  "repository": "https://github.com/offscriptio/hasura-supertokens.git",
  "author": "Off Script <hello@offscript.io>",
  "license": "MIT",
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-operations": "^1.17.16",
    "@types/node": "^15.6.0",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-prettier": "^3.4.0",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.5",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "fastify": "^3.15.1",
    "graphql-request": "^3.4.0",
    "node-fetch": "^2.6.1",
    "supertokens-node": "^5.0.1"
  },
  "scripts": {
    "build": "yarn esbuild src/index.ts --minify --platform=node --target=node14 --bundle --outdir=.build --minify --sourcemap",
    "start": "node .build/index.js",
    "codegen": "graphql-codegen --config codegen.yml -r dotenv/config",
    "type-check": "tsc -p tsconfig.json --noEmit --sourceMap",
    "lint": "eslint --ignore-path .eslintignore . --ext ts --ext tsx --ext js --ext jsx --cache",
    "lint:fix": "yarn lint --fix"
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "amd": false,
      "node": true
    },
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "root": true,
    "rules": {
      "@typescript-eslint/ban-types": "off"
    }
  }
}
